<div class="col-md-12 mt-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>
        Pay Accounts
      </h3>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nickname</th>
              <th>Account Type</th>
              <th>Account Number</th>
              <th>
                <button type="button" class="btn btn-success">Create</button>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @pay_accounts.each do |pay_account| %>
              <tr>
                <td><%= pay_account.nickname %></td>
                <td><%= pay_account.account_type.humanize %></td>
                <td>
                  <span class="account-num"><%= pay_account.account_number %></span>
                  <button type="button" class="btn btn-sm btn-default hide-btn">hide</button>
                </td>
                <td>
              
                  <%= link_to "Show", pay_account_path(pay_account), class: "btn btn-warning" %>
                  
                  <button type="button" class="btn btn-danger">Delete</button>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".hide-btn").click(function() {
    var span = $(this).parent().find(".account-num");
    var number = span.text();
    var hidden = number.replace(/.(?=.{4})/g, '*');
    span.text(hidden);
  });
</script>
